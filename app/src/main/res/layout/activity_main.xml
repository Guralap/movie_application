<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1691677.movie_application.MainActivity">


    <TextView
        android:id="@+id/appname"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/hela"
        android:paddingTop="115dp"
        android:text="Movie Hub"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/searchmovie"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="50dp"
        android:onClick="Clicked"
        android:text="search"
        android:layout_below="@+id/appname"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchmovie"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </ListView>




</RelativeLayout>
